{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strict": true,
    "allowJs": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "checkJs": false,
    "declaration": true,
    "outDir": "dist",
    "declarationDir": "dist",
    "types": ["node", "vite", "vitest/globals"],
    "baseUrl": "./src"
  },
  "include": ["./src/**/*.ts", "./test/**/*.ts"]
}
